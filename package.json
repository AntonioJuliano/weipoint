{
  "name": "ethnexus-server",
  "version": "1.0.0",
  "description": "server for ethnexus app",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js --ignore client/",
    "prod": "NODE_ENV=production node server/server.js",
    "client": "node start-client.js",
    "test": "mocha test",
    "prod_install": "npm install --production && cd client && npm install && cd ..",
    "prod_build": "cd client && npm run build && rm -rf node_modules scripts src && cd ..",
    "lint": "eslint --ignore-path .gitignore server/**"
  },
  "pre-commit": [ "lint" ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonioJuliano/ethnexus-web.git"
  },
  "keywords": [
    "ethereum"
  ],
  "author": "Antonio Juliano",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AntonioJuliano/ethnexus-web/issues"
  },
  "homepage": "https://github.com/AntonioJuliano/ethnexus-web#readme",
  "dependencies": {
    "bluebird": "latest",
    "body-parser": "^1.15.2",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "express-validator": "^3.1.2",
    "mongoose": "^4.7.7",
    "node-fetch": "^1.6.3",
    "safe-eval": "^0.3.0",
    "solc": "^0.4.8",
    "web3": "^0.18.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.1",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.18.0",
    "jshint": "^2.9.4",
    "mocha": "^3.2.0",
    "npm": "^4.1.2",
    "pre-commit": "^1.2.2",
    "style-loader": "^0.13.1"
  }
}
